<header>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar collapsed" data-target=".navbar-responsive-collapse"
                   data-toggle="collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="{{ base.menu.link.start.href }}"
                   title="{{ base.menu.link.start.title }}">Kateglo</a>

                <div class="nav-collapse collapse navbar-responsive-collapse">
                    <ul class="nav">
                        <li><a href="#">Kamus</a></li>
                        <li><a href="#">Tesaurus</a></li>
                        <li><a href="#">Padanan</a></li>
                    </ul>
                    {% block user %}
                        <ul class="nav pull-right">
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <li>
                                    <a href="{{ path('fos_user_profile_show') }}">
                                        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('fos_user_security_logout') }}">
                                        {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                                    </a>
                                </li>
                            {% else %}
                                <li><a href="{{ base.user.link.register.href }}">Daftar</a></li>
                                <li>
                                    <a href="{{ base.user.link.login.href }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                                </li>
                            {% endif %}
                        </ul>
                    {% endblock %}
                </div>
            </div>
        </div>
    </nav>
</header>